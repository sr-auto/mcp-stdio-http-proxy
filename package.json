{
  "name": "mcp-stdio-http-proxy",
  "version": "1.0.0",
  "description": "A TypeScript proxy that bridges stdio MCP clients (like Claude Desktop) to HTTP SSE MCP servers with OAuth authentication",
  "homepage": "https://github.com/sr-auto/mcp-stdio-http-proxy#README.md",
  "main": "dist/index.js",
  "bin": {
    "mcp-stdio-http-proxy": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "setup": "node setup.js",
    "validate": "node validate-config.js",
    "test-config": "npm run validate"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "oauth",
    "stdio",
    "http",
    "sse"
  ],
  "author": "sr-auto",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "dotenv": "^16.3.1",
    "eventsource": "^2.0.2",
    "express": "^5.0.1",
    "node-fetch": "^3.3.2",
    "open": "^10.0.3"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
